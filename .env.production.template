# Production Environment Variables for Hostinger VPS
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (MySQL)
# Get these from your Hostinger MySQL database settings
DATABASE_URL="mysql://your_db_user:your_db_password@localhost:3306/your_database_name"

# Or individual database settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# Security
SESSION_SECRET=your-super-secret-session-key-here-change-this
JWT_SECRET=your-jwt-secret-here-change-this

# Domain Configuration
DOMAIN=dailynewscrypto.net
FRONTEND_URL=https://dailynewscrypto.net
API_URL=https://dailynewscrypto.net/api

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@dailynewscrypto.net
SMTP_PASS=your_email_password

# File Upload Configuration
UPLOAD_DIR=/var/www/dailynewscrypto.net/uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OpenAI Configuration (if using AI features)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Currency API (if using external rates)
# CURRENCY_API_KEY=your-currency-api-key-here

# SSL Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true