# MySQL Security Configuration for Hostinger VPS
# Place this in /etc/mysql/mysql.conf.d/security.cnf

[mysqld]
# Bind MySQL to localhost only - DO NOT expose to internet
bind-address = 127.0.0.1
mysqlx-bind-address = 127.0.0.1

# Disable networking entirely (optional - use if no remote access needed)  
# skip-networking = 1

# Security settings
local-infile = 0
secure-file-priv = /var/lib/mysql-files/

# Disable dangerous functions
symbolic-links = 0

# Performance and limits
max-connections = 100
max_user_connections = 50
max_allowed_packet = 16M

# Logging for security monitoring (disable general_log in production to prevent sensitive data leakage)
general_log = 0
# general_log_file = /var/log/mysql/mysql.log
log_error = /var/log/mysql/error.log

# Slow query logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2

# Character set for multi-language support
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB settings for MapEstate workload
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2